# Given star mass
M_star = 0.918  # in solar masses

def calc_mass(K, P, M_star):
    return (K / 28.4) * (P / 365)**(1/3) * M_star**(2/3)

mass1 = calc_mass(K1, P1, M_star)
mass2 = calc_mass(K2, P2, M_star)

print(f"Planet 1: K = {K1:.2f} m/s, P = {P1:.2f} days → Mass ≈ {mass1:.3f} M_Jupiter")
print(f"Planet 2: K = {K2:.2f} m/s, P = {P2:.2f} days → Mass ≈ {mass2:.3f} M_Jupiter")
