# Extract parameters from best fit
K1, P1, _, K2, P2, _, _ = popt2
M_star = 0.905  # from NASA Exoplanet Archive for 55 Cnc, in solar masses

# Mass formula in Jupiter masses
def planet_mass(K, P, M_star):
    return (K / 28.4) * (P / 365) ** (1/3) * (M_star) ** (2/3)

M1 = planet_mass(K1, P1, M_star)
M2 = planet_mass(K2, P2, M_star)

print(f"Planet 1: K={K1:.2f} m/s, P={P1:.2f} days, Mass={M1:.3f} Mjup")
print(f"Planet 2: K={K2:.2f} m/s, P={P2:.2f} days, Mass={M2:.3f} Mjup")
